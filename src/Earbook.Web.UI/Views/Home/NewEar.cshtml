@{
    ViewData["Title"] = "Nové ouško";
}

<div class="row">
    <div class="col"></div>
    <div class="col-5">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Jméno majitele</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Jméno majitele" autofocus>
            </div>
            <div class="form-group">
                <label for="picture">Obrázek</label>
                <input type="file" class="form-control" id="picture" name="picture">
            </div>
            <button type="submit" class="btn btn-primary">Nahrát</button>
        </form>
    </div>
    <div class="col"></div>
</div>